{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form, {'attr': {class: 'js-connect-object-form', novalidate: 'novalidate'}}) }}

{{ form_row(form.connectableObject, {'attr': {novalidate: 'novalidate'}}) }}
{{ form_row(form.joinType, {'attr': {novalidate: 'novalidate'}}) }}

<div class="js-property-value-container">
    {% if form.property is defined %}
        {{ form_row(form.property, {'attr': {novalidate: 'novalidate'}}) }}
    {% endif %}
</div>
<br>
<button type="submit" class="btn-primary btn w-100 js-connect-object-submit-button">Connect</button>

{{ form_rest(form) }}
{{ form_end(form) }}
